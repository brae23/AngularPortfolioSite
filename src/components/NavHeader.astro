<div class="main-div">
    <img class="profile-img" src="/headshot2_cropped_circle.webp">
    <h3>Brendan Rae</h3>
    <nav class="desktop-nav">
        <a href="/">home</a>
        <a href="/about">about</a>
        <a href="/blog">blog</a>
    </nav>
    <button class="hamburger">
        <div class="bar"></div>
    </button>
</div>
<nav class="mobile-nav">
    <a href="/">home</a>
    <a href="/about">about</a>
    <a href="/blog">blog</a>
</nav>

<script>
    window.onload = () => {
        const html_body = document.body;
        const menu_btn = document.querySelector('.hamburger');
        const mobile_nav_drawer = document.querySelector('.mobile-nav');
        menu_btn?.addEventListener('click', () => {
            menu_btn?.classList.toggle('is-active');
            mobile_nav_drawer?.classList.toggle('is-active');
            html_body.classList.toggle('no-scroll');
        })
    }
</script>

<style>
    .main-div {
        margin: auto;
		padding: 1.5rem;
        display: flex;
        flex-direction: row;
        align-items: center;
        height: 80px;
        position: relative;
        z-index: 100;
    }
    img {
        justify-self: flex-start;
        padding: 1rem;
        border-radius: 50%;
        height: 60px;
        width: 60px;
    }
    a {
        font-size: 22px;
        cursor: pointer;
        margin: 22px 20px 20px 0;
        background-size: 400%;
        text-decoration: none;
        color: var(--text-color);
    }
    a:hover {
        background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
    }
    .desktop-nav > a:hover {
        background-position: 0%;
        background-size: 400%;
    }
    .hamburger {
        position: relative;
        display: block;
        height: 35px;
        width: 35px;
        cursor: pointer;
        margin-left: auto;

        appearance: none;
        background: none;
        border: none;
        outline: none;
    }
    .hamburger .bar, .hamburger:after, .hamburger:before {
        content: '';
        display: block;
        width: 100%;
        height: 5px;
        background-color: var(--text-color);
        margin: 6px; 0px;
        transition:0.4s;
    }
    .hamburger.is-active:before {
        transform: rotate(-45deg) translate(-8px, 6px);
    }
    .hamburger.is-active:after {
        transform: rotate(45deg) translate(-9px, -8px);
    }
    .hamburger.is-active .bar {
        opacity: 0;
    }
    .mobile-nav {
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: center;
        position: fixed;
        top: 0;
        left: 100%;
        width: 100%;
        height: 100%;
        overflow: hidden;
        z-index: 98;
        padding-top: 100px;
        transition: 0.4s;
        background: var(--background-color);

    }
    .mobile-nav.is-active {
        left: 0;
    }
    .mobile-nav > a {
        display: block;
        text-align: center;
        margin-bottom: 16px;
        padding: 12px 16px;
        width: 40%;
    }
    .mobile-nav a:hover {
        background-position: 0%;
        background-size: 300%;
    }

    @media only screen and (max-width: 700px) {
        .desktop-nav {
            display:none;
        }
    }
    @media only screen and (min-width: 701px) {
        .desktop-nav {
            margin-left:auto;
        }
        .hamburger {
            display: none;
        }
        .mobile-nav {
            display: none;
        }
    }
</style>